<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include
            android:id="@+id/layout_title_account"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/title_account" />
        <!-- banner 1 -->

        <ImageView
            android:id="@+id/user_head"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_below="@id/layout_title_account"
            android:layout_marginTop="15dp"
            android:src="@drawable/boy" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_title_account"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/user_head"
            android:clickable="true"
            android:text="@string/lr"
            android:textColor="@drawable/text_selector"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/lucky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_title_account"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="54dp"
            android:layout_toRightOf="@id/user_head"
            android:text="@string/lucky"
            android:textColor="#8B658B"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_title_account"
            android:layout_marginTop="54dp"
            android:layout_toRightOf="@id/lucky"
            android:text="@string/default_number"
            android:textColor="#8B658B"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/detail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/divider"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:src="@drawable/imgview_selector" />

        <!-- 横线分割线 -->

        <LinearLayout
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/user_head"
            android:layout_marginTop="5dp"
            android:background="#8B7E66"
            android:orientation="vertical" >
        </LinearLayout>
        <!-- banner 2 -->

        <RelativeLayout
            android:id="@+id/center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_centerVertical="true"
            android:layout_marginTop="2dp" >

            <RelativeLayout
                android:id="@+id/first_bar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/fabiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:paddingRight="150dp"
                    android:text="@string/fabiao"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/fabiao_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fabiao"
                    android:layout_centerHorizontal="true"
                    android:paddingRight="155dp"
                    android:text="@string/default_number"
                    android:textColor="#8B658B" />

                <View
                    android:id="@+id/view_divider1"
                    android:layout_width="1dip"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/shoucang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="150dp"
                    android:text="@string/shoucang"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/shoucang_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/shoucang"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="155dp"
                    android:text="@string/default_number"
                    android:textColor="#8B658B" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/second_bar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/first_bar" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3" >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="50dp" >

                        <TextView
                            android:id="@+id/guanzhu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/guanzhu"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/guanzhu_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/guanzhu"
                            android:text="@string/default_number"
                            android:textColor="#8B658B" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/view_divider2"
                        android:layout_width="1dip"
                        android:layout_height="36dp"
                        android:layout_marginTop="5dp"
                        android:background="#000000" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="50dp" >

                        <TextView
                            android:id="@+id/fensi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fensi"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/fensi_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/fensi"
                            android:text="@string/default_number"
                            android:textColor="#8B658B" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/view_divider3"
                        android:layout_width="1dip"
                        android:layout_height="36dp"
                        android:layout_marginTop="5dp"
                        android:background="#000000" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="50dp" >

                        <TextView
                            android:id="@+id/bangzhu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bangzhu"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/bangzhu_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/bangzhu"
                            android:text="@string/default_number"
                            android:textColor="#8B658B" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <!-- 横线分割线 -->

        <LinearLayout
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/center"
            android:layout_marginTop="8dp"
            android:background="#8B7E66"
            android:orientation="vertical" >
        </LinearLayout>
        <!-- banner3精彩图片 -->

        <RelativeLayout
            android:id="@+id/divider3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider2" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="180dip" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="35dip"
                    android:layout_gravity="bottom"
                    android:background="#33000000"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/banner_text"
                        android:textColor="#000000" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:gravity="center" >

                        <View
                            android:id="@+id/v_dot0"
                            style="@style/dot_style"
                            android:background="@drawable/dot_focused" />

                        <View
                            android:id="@+id/v_dot1"
                            style="@style/dot_style" />

                        <View
                            android:id="@+id/v_dot2"
                            style="@style/dot_style" />

                        <View
                            android:id="@+id/v_dot3"
                            style="@style/dot_style" />

                        <View
                            android:id="@+id/v_dot4"
                            style="@style/dot_style" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </RelativeLayout>
        <!-- banner 4 -->

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider3" >

            <LinearLayout
                android:id="@+id/fabiao_l"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal" >

                <!-- 发表列表 -->

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/fabiao_list" />

                <TextView
                    android:id="@+id/fabiao_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:clickable="true"
                    android:text="@string/text_tip"
                    android:textColor="@drawable/text_selector"
                    android:textSize="17sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/fabiao_l"
                android:background="#8B7E66" />
            <!-- 横线分割线 -->

            <LinearLayout
                android:id="@+id/shoucang_l"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/fabiao_l"
                android:orientation="horizontal" >

                <!-- 收藏列表 -->

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/shoucang_list" />

                <TextView
                    android:id="@+id/shoucang_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:clickable="true"
                    android:text="@string/shoucang_tip"
                    android:textColor="@drawable/text_selector"
                    android:textSize="17sp" />
            </LinearLayout>
            <!-- 横线分割线 -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/shoucang_l"
                android:background="#8B7E66" />

            <LinearLayout
                android:id="@+id/video_l"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/shoucang_l"
                android:orientation="horizontal" >

                <!-- 视频列表 -->

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/video_list" />

                <TextView
                    android:id="@+id/video_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:clickable="true"
                    android:text="@string/video_tip"
                    android:textColor="@drawable/text_selector"
                    android:textSize="17sp" />
            </LinearLayout>
            <!-- 横线分割线 -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/video_l"
                android:background="#8B7E66" />

            <LinearLayout
                android:id="@+id/photo_l"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/video_l"
                android:orientation="horizontal" >

                <!-- 照片列表 -->

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/photo_list" />

                <TextView
                    android:id="@+id/photo_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:clickable="true"
                    android:text="@string/photo_tip"
                    android:textColor="@drawable/text_selector"
                    android:textSize="17sp" />
            </LinearLayout>
            <!-- 横线分割线 -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:layout_below="@id/photo_l"
                android:layout_marginTop="2dp"
                android:background="#8B7E66" />

            <LinearLayout
                android:id="@+id/fankui_l"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/photo_l"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <!-- 反馈建议 -->

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/suggestion" />

                <TextView
                    android:id="@+id/fankui_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:clickable="true"
                    android:text="@string/fankui"
                    android:textColor="@drawable/text_selector"
                    android:textSize="17sp" />
            </LinearLayout>
            <!-- 横线分割线 -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/fankui_l"
                android:background="#8B7E66" />

            <LinearLayout
                android:id="@+id/tuichu_l"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/fankui_l"
                android:orientation="horizontal" >

                <!-- 退出登录 -->

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/tuichu_list" />

                <TextView
                    android:id="@+id/tuichu_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:clickable="true"
                    android:text="@string/tuichu"
                    android:textColor="@drawable/text_selector"
                    android:textSize="17sp" />
            </LinearLayout>
            <!-- 横线分割线 -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tuichu_l"
                android:background="#8B7E66" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>